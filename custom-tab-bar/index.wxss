.tab-bar {
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	height: 100rpx;
	background: white;
	display: flex;
	padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-item {
	flex: 1;
	text-align: center;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
}

.tab-bar-item cover-image {
	width: 72rpx;
	height: 52rpx;
}

.tab-bar-item cover-view {
	margin: 4rpx 0;
	font-size: 20rpx;
	color: #272727;
}
